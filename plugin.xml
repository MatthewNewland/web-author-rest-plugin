<?xml version="1.0" encoding="UTF-8"?>
<!-- The plugin.dtd file is located in the OXYGEN_INSATALL_DIR/plugins directory -->
<!DOCTYPE plugin SYSTEM "../plugin.dtd">

<plugin
    class="ro.sync.exml.plugin.Plugin"

    id="web-author-rest-connector"
    name="web-author-rest-connector"
    description="A plugin for oXygen XML Web Author."
    version="18.1.1-SNAPSHOT"
    vendor="com.oxygenxml">

  <runtime>
    <librariesFolder name="lib" />
    <librariesFolder name="target/lib" />
    <library name="target/classes" />
  </runtime>

  <!-- Login servlet -->
  <extension type="WebappServlet" class="com.oxygenxml.rest.plugin.LoginServlet"/>
  
  <extension type="WebappServlet" class="com.oxygenxml.rest.server.MockRestServer"/>
  <!-- URL info servlet -->
  <extension type="WebappServlet" class="com.oxygenxml.rest.plugin.RestURLInfo"/>
  
  <extension type="URLHandler" 
    class="com.oxygenxml.rest.plugin.RestURLHandlerPluginExtension"/>
    
  <extension type="LockHandlerFactory"
    class="com.oxygenxml.rest.plugin.RestLockHandlerFactory"/>
  

  <!-- You can access static files at XML_WEB_AUTHOR/plugin-resources/rest-resources/RESOURCE_FILE -->
  <extension type="WebappStaticResourcesFolder" path="web/static/" href="rest-resources"/>
</plugin>
